{% if action == 'replace' %}
    <turbo-stream action="replace" target="tr-users-message-{{ usersMessage.id }}">
        <template>
            {% include 'users_message/_table_row.html.twig' with { 'usersmessage': usersMessage } %}
        </template>
    </turbo-stream>


{% if action == 'append' %}
{# Pour l'ajout (new) #}
    <turbo-stream action="append" target="users-message-tbody">
        <template>
            {% include 'users_message/_table_row.html.twig' with { 'usersmessage': usersMessage } %}
        </template>
    </turbo-stream>
{% endif %}

<turbo-stream action="append" target="modal-portal">
	<template>
		<script>
			document.dispatchEvent(new CustomEvent("modal:close"));
		</script>
	</template>
</turbo-stream>




